<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.fragments.auth.DonorProfileSettingFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etFullName"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_selector"
        android:hint="@string/prompt_fullname" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:labelFor="@+id/gender_selector"
        android:text="@string/label_gender"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/gender_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:rowCount="1">

        <TextView
            android:id="@+id/male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/male" />

        <TextView
            android:id="@+id/female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/female" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/label_blood_type"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/blood_type_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:rowCount="2">

        <TextView
            android:id="@+id/a_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/light_red"
            android:text="@string/a_plus" />

        <TextView
            android:id="@+id/a_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/light_red"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/a_minus" />

        <TextView
            android:id="@+id/b_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/light_red"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/b_plus" />

        <TextView
            android:id="@+id/b_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/light_red"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/b_minus" />

        <TextView
            android:id="@+id/o_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/o_plus" />

        <TextView
            android:id="@+id/o_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/o_minus" />

        <TextView
            android:id="@+id/ab_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/ab_plus" />

        <TextView
            android:id="@+id/ab_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/box_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:padding="15dp"
            android:text="@string/ab_minus" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/label_dob"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eDOB"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:background="@drawable/input_selector"
            android:hint="@string/prompt_dob"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date_picker_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/label_datepicker" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/save_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:backgroundTint="@color/primary_red"
            android:layout_centerInParent="true"
            android:text="@string/action_save" />
    </RelativeLayout>



</LinearLayout>